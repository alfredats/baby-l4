class Sign {
    beat : Sign -> Bool
}

class Player {
    throw : Sign -> Bool
}

class Game {
    participate_in : Player -> Bool
    win : Player -> Bool
}

decl Participate_in : Player -> Game -> Bool
decl Win : Player -> Game -> Bool
decl Lose : Player -> Game -> Bool
decl Beat : Sign -> Sign -> Bool

# there is a concern here -- are we matching top to bottom,
# or more specific to less specific, and if so how do we order specificity?
# Beat Paper Rock: True
# Beat       Rock Scissors: True
# Beat            Scissors Paper: True
# Beat _ _: False

decl Throw : Player -> Sign -> Bool

# these things later get treated as enums
decl Rock     : Sign
decl Paper    : Sign
decl Scissors : Sign

rule <beats_rock_scissors>
if True
then Beats Rock Scissors


# rule <beats_rock_scissors>
# if True
# then beat Rock Scissors

# rule <beats_scissors_paper>
# if True
# then beat Scissors Paper

# rule <beats_paper_rock>
# if True
# then beat Rock Paper

# proposed new syntax: 
# https://www.typescriptlang.org/docs/handbook/enums.html
# good artists copy; great artists steal
# enum Sign {
#     Rock, Paper, Scissors
# }

# downstream, rps.out wants to have
#   "throws" is an Enum whose options are rock:Rock, paper:Paper, scissors:Scissors
# and that's cool, our rule is, we downcase the enum value, and we create "options" under
# an attribute whose "name" is whatever, and we ignore the orig enum type name and just say "Enum".

rule <winner>
for a : Player, g : Game, r : Sign, s : Sign
if (exists b : Player . participate_in g a && participate_in g b &&
                                           throw a r  && throw b s && beat r s
                                           )
then win g a


